/*
 * -------------------------------------------------------------
 *  Nextflow config file for use with Singularity on BINAC cluster
 * -------------------------------------------------------------
 * Defines basic usage limits and singularity image id.
 */


process {
    beforeScript = 'module load singularity2.4.4'
    executor = 'slurm'
    queue = 'ikmb_a'
    clusterOptions = { '--qos=ikmb_a' }
}

params {
  max_memory = 128.GB
  max_cpus = 16
  max_time = 48.h

    metaFiles {
        'GRCh37' {
	    gfasta = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/b37/human_g1k_v37.clean.fasta'
	    dbsnp = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/b37/dbsnp_138.b37.vcf.gz'
	    mills = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/b37/Mills_and_1000G_gold_standard.indels.b37.vcf.gz'
            omni = '/beegfs/work/zxmai83/Reference/dbs/b37/1000G_omni2.5.b37.vcf'
	    omni = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/b37/1000G_omni2.5.b37.vcf.gz'
	    thousandg = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/b37/1000G_phase1.indels.b37.vcf.gz'
        }
    }
    kitFiles {
	'xGen' {
	    bait = "/ifs/data/nfs_share/ikmb_repository/references/exomes/idt_xgen/v1.0/xgen-exome-research-panel-probes.interval_list"
	    target = "/ifs/data/nfs_share/ikmb_repository/references/exomes/idt_xgen/v1.0/xgen-exome-research-panel-targets.interval_list"
        }
    }
}
