/*
 * -------------------------------------------------------------
 *  Nextflow config file for use with Singularity on BINAC cluster
 * -------------------------------------------------------------
 * Defines basic usage limits and singularity image id.
 */


process {
    beforeScript = 'module load singularity2.4.4'
    executor = 'slurm'
    queue = 'ikmb_new'
    clusterOptions = { '--qos=ikmb_a' }
}

params {
  max_memory = 250.GB
  max_cpus = 20
  max_time = 48.h

    metaFiles {
        'hg19' {
	    gfasta = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/hg19/clinical/hg19.clinical.fa'
	    dbsnp = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/hg19/dbsnp_138.hg19.vcf.gz'
	    mills = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/hg19/Mills_and_1000G_gold_standard.indels.hg19.sites.vcf.gz'
	    omni = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/hg19/1000G_omni2.5.hg19.sites.vcf.gz'
	    thousandg = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/hg19/1000G_phase1.snps.high_confidence.hg19.sites.vcf.gz'
	}
        'GRCh37' {
	    gfasta = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/b37/human_g1k_v37_decoy.clean.fasta'
	    dbsnp = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/b37/dbsnp_138.b37.vcf.gz'
	    mills = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/b37/Mills_and_1000G_gold_standard.indels.b37.vcf.gz'
	    omni = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/b37/1000G_omni2.5.b37.vcf.gz'
	    thousandg = '/ifs/data/nfs_share/ikmb_repository/references/gatk/bundle/2.8/b37/1000G_phase1.indels.b37.vcf.gz'
        }
    }
    kitFiles {
	'xGen' {
	    bait = "/ifs/data/nfs_share/ikmb_repository/references/exomes/idt_xgen/v1.0/hg19_clinical/xgen-exome-research-panel-probes.interval_list"
	    target = "/ifs/data/nfs_share/ikmb_repository/references/exomes/idt_xgen/v1.0/hg19_clinical/xgen-exome-research-panel-targets.interval_list"
        }
    }
}
